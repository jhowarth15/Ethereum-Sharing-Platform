<div class="container">
<%- model_class = Item -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @item.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
    <dd><%= @item.category %></dd>
    <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
    <dd><%= @item.model %></dd>
    <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
    <dd><%= @item.age %></dd>
    <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
    <dd><%= @item.location %></dd>
    <dt><strong><%= model_class.human_attribute_name(:min_loan_period) %>:</strong></dt>
    <dd><%= @item.min_loan_period %></dd>
    <dt><strong><%= model_class.human_attribute_name(:max_loan_period) %>:</strong></dt>
    <dd><%= @item.max_loan_period %></dd>
    <dt><strong><%= model_class.human_attribute_name(:deposit) %> (£):</strong></dt>
    <dd><%= @item.deposit %></dd>
    <dt><strong>Loan Amount (£):</strong></dt>
    <dd><%= @item.rental_rate %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                items_path, :class => 'btn btn-default'  %>
  <% if user_signed_in? and @item.user_id == current_user.id %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_item_path(@item), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  item_path(@item),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
  <% end %>
                
  <% if user_signed_in? %>
      <%= link_to 'Inquire', {:controller => "contracts", :action => "new",
                :item_id => @item.id, 
                :lender_id => @item.user_id,
                :deposit => @item.deposit,
                :rental_rate => @item.rental_rate,
                :name => @item.name,
                :min_loan_period => @item.min_loan_period,
                :max_loan_period => @item.max_loan_period}, 
                :class => 'btn btn-default' %>
  <% elsif !user_signed_in? %>
      <%= link_to 'Login to Inquire', login_path, :class => 'btn btn-default' %>
  <% end %>

</div>
