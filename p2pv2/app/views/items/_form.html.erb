<%= form_for @item, :html => { :class => "form-horizontal item" } do |f| %>

  <% if @item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Item's name*", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :category, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :category, :class => 'form-control' %>
    </div>
    <%=f.error_span(:category) %>
  </div>
  <div class="form-group">
    <%= f.label :model, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :model, :class => 'form-control' %>
    </div>
    <%=f.error_span(:model) %>
  </div>
  <div class="form-group">
    <%= f.label :age, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :age, :class => 'form-control' %>
    </div>
    <%=f.error_span(:age) %>
  </div>
  <div class="form-group">
    <%= f.label :location, "Location*", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :location, :class => 'form-control', placeholder: "Street, City, 2-letter country code" %>
    </div>
    <%=f.error_span(:location) %>
  </div>
  <div class="form-group">
    <%= f.label :min_loan_period, "Minimum loan period (day)*", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :min_loan_period, :class => 'form-control' %>
    </div>
    <%=f.error_span(:min_loan_period) %>
  </div>
  <div class="form-group">
    <%= f.label :max_loan_period, "Maxloan period (days)*", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :max_loan_period, :class => 'form-control' %>
    </div>
    <%=f.error_span(:max_loan_period) %>
  </div>
  <div class="form-group">
    <%= f.label :deposit, "Deposit (£)*", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :deposit, :class => 'form-control' %>
    </div>
    <%=f.error_span(:deposit) %>
  </div>
  <div class="form-group">
    <%= f.label :rental_rate, "Rental rate (£/day)*", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rental_rate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:rental_rate) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                items_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
