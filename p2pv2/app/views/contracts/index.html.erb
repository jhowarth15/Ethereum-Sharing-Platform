<div class="container">
  <%- model_class = Contract -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:item_id) %></th>
        <th><%= model_class.human_attribute_name(:lender_id) %></th>
        <th><%= model_class.human_attribute_name(:inquirer_id) %></th>
        <th><%= model_class.human_attribute_name(:key) %></th>
        <th><%= model_class.human_attribute_name(:loaned_out) %></th>
        <th><%= model_class.human_attribute_name(:returned) %></th>
        <th><%= model_class.human_attribute_name(:deposit) %></th>
        <th><%= model_class.human_attribute_name(:rental_rate) %></th>
        <th><%= model_class.human_attribute_name(:updated_at) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @contracts.each do |contract| %>
        <tr>
          <td><%= link_to contract.id, contract_path(contract) %></td>
          <td><%= contract.item_id %></td>
          <td><%= contract.lender_id %></td>
          <td><%= contract.inquirer_id %></td>
          <td><%= contract.key %></td>
          <td><%= contract.loaned_out %></td>
          <td><%= contract.returned %></td>
          <td><%= contract.deposit %></td>
          <td><%= contract.rental_rate %></td>
          <td><%= contract.updated_at %></td>
          <td><%=l contract.created_at %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                       edit_contract_path(contract), :class => 'btn btn-default btn-xs' %>
	    <%= link_to 'View',
                       contract_path(contract), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        contract_path(contract),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
