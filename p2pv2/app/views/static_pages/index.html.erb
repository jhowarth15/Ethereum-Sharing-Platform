
<% provide(:title, "Home")%>
<!--Bootstrap template used was "http://startbootstrap.com/template-overviews/agency/"-->
<body id="page-top" class="index">

    <!-- Header -->
    <header class="jumbotron move-up">
      <div class="container" id="hp-image">
        <div class="intro-text">

          <div class="row">
		        <div id="hp-search">

              <%= form_tag("/search_items", method: "get", :class => 'form-inline') do %>
                  <%= form_tag("/search_items", method: "get", :class => 'form-inline') do %>
                      <div class="form-group homepage-search">
                        <div class="col-md-3 homepage-search">
                          <%= text_field_tag :search, params[:search], class: 'form-control homepage-search-field', placeholder: "Item..." %>
                        </div>
                        <div class="col-md-offset-1 col-md-2 homepage-search">
                          <%= text_field_tag :search_loc, params[:search_loc], class: 'form-control homepage-search-field', placeholder: "Street, City, ..." %>
                        </div>
                        <div class="col-md-offset-2 col-md-3 homepage-search">
                          <%= submit_tag("Can I Borrow That?", :class => 'btn btn-xl text-center homepage-search-button') %>
                        </div>
                      </div>
                  <% end %>
              <% end %>

	          </div>
	         </div>

		    </div>
      </div>
    </header>
    
    
    <!-- Services Section -->
    <section id="how">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="how-heading">How It Works</h2>
                </div>
            </div>
            <div class="row text-center move-down-how">
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-globe fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="how-heading">Share</h4>
                    <p class="text-muted"> Loan out your rarely used possessions to
			 your neighbours and earn some extra cash and reduce waste.  </p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-gbp fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="how-heading">Save</h4>
                    <p class="text-muted">Save money, time and resources
			by borrowing from members in your area. In doing so you'll avoid 
			a trip to the shops and a hole in your wallet.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="how-heading">Secure</h4>
                    <p class="text-muted"> Our Smart Contracts protect you! Smart
			Contracts keep everyone safe by automating the payment process 
			and providing insurance for all of our members. 
                </div>
            </div>

	    <div class="row text-center move-down-how">
            	 <div class="col-md-2" ></div>
		 <div class="col-md-3 how-button" >
			<%= link_to "How to Borrow", howtoborrow_path, :class=>"btn btn-primary btn-lg"%>
		 </div>
		 <div class="col-md-2" ></div>
		 <div class="col-md-3 how-button" >
         	 	<%= link_to "How to Lend", howtolend_path, :class=>"btn btn-primary btn-lg lend"%>
		 </div>
		 <div class="col-md-2" ></div>		

	    </div>
	</div>
    </section>



